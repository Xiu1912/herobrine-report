  <div id="whisperFlash">WHISPERER</div>
  <script>
    const btnTranslate = document.getElementById("btnTranslate");
    const btnOpen = document.getElementById("btnOpen");
    const summary = document.getElementById("summary");
    const log = document.getElementById("log");
    const secret = document.getElementById("secret");

    let english = false;

    btnTranslate.addEventListener("click", () => {
      english = !english;
      if(english){
        summary.innerHTML = `
          <div class="row"><div class="k">Project</div><div class="v">HBR-0  Observation and behavioral anomaly</div></div>
          <div class="row"><div class="k">Environment</div><div class="v">Minecraft  Survival  No cheats</div></div>
          <div class="row"><div class="k">Trigger</div><div class="v warn">Cheats or horror mods amplify the phenomenon</div></div>
          <div class="row"><div class="k">Conclusion</div><div class="v">Entity can “borrow” any mob to manifest subtle interference</div></div>
          <div class="row"><div class="k">Note</div><div class="v mono">If you can read this page, it allowed you to</div></div>
        `;
        btnTranslate.textContent = "显示中文摘要";
      } else {
        location.reload();
      }
    });

    btnOpen.addEventListener("click", () => {
      log.style.display = (log.style.display === "none") ? "block" : "none";
      if(log.style.display === "block"){
        window.scrollTo({ top: document.body.scrollHeight, behavior:"smooth" });
      }
    });

    let buffer = "";
    window.addEventListener("keydown", (e) => {
      if(e.key.length === 1) buffer += e.key.toLowerCase();
      if(e.key === "Backspace") buffer = buffer.slice(0,-1);
      if(e.key === "Enter"){
        if(buffer.includes("whisperer")){
          secret.style.display = "block";
          secret.scrollIntoView({behavior:"smooth", block:"center"});
        }
        buffer = "";
      }
      if(buffer.length > 30) buffer = buffer.slice(-30);
    });

    (() => {
  const key = "whisperFlashDone";
  if (sessionStorage.getItem(key)) return;

  const chance = 0.45; // 45% des visites
  if (Math.random() > chance) return;

  const el = document.getElementById("whisperFlash");
  const delay = Math.floor(12000 + Math.random() * 28000); // 12s à 40s

  setTimeout(() => {
    sessionStorage.setItem(key, "1");
    el.classList.add("show");

    setTimeout(() => el.classList.remove("show"), 260);

    setTimeout(() => el.classList.add("show"), 620);
    setTimeout(() => el.classList.remove("show"), 860);
  }, delay);
})();

  </script>
  

